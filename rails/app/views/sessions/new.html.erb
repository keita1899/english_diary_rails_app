<% content_for(:title, "ログイン") %>

<div class="w-full max-w-full sm:max-w-md mx-auto p-8 space-y-6  rounded">
  <h2 class="text-2xl font-bold text-center">ログイン</h2>
  <%= form_with(url: sessions_path, scope: :session) do |form| %>
    <% if @error_message.present? %>
    <div class="alert alert-error shadow-lg">
      <p><%= @error_message %></p>
    </div>
  <% end %>
    <div class="form-control mt-6">
      <%= form.label :email, 'メールアドレス', class: "label" %>
      <%= form.email_field :email, class: "input w-full bg-white" %>
    </div>
    <div class="form-control mt-6">
      <%= form.label :password, 'パスワード', class: "label" %>
      <%= form.password_field :password, class: "input w-full bg-white" %>
    </div>
    <div class="form-control mt-8">
      <%= form.submit "ログイン", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "パスワードを忘れた方はこちら", "#", class: "text-blue-500 hover:underline" %>
  </div>
  <div class="mt-4 text-center">
    <%= link_to "新規登録", signup_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>