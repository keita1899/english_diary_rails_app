<% content_for(:title, "プロフィール") %>

<div class="w-full max-w-full sm:max-w-md mx-auto p-8 space-y-6 rounded">
  <h2 class="text-2xl font-bold text-center">プロフィール</h2>
  <%= form_with(model: @user) do |f| %>
    <%= render 'shared/error_message', object: @user %>
    <div class="form-control mt-6">
      <div class="avatar mx-auto">
        <div class="w-32 rounded-full">
          <%= image_tag @user.avatar_url, alt: "Preview", class: "w-full h-full object-cover rounded-full", id: 'avatar-preview' %>
        </div>
      </div>
      <div class="mx-auto mt-4">
        <%= f.file_field :avatar, class: "file-input bg-white w-full max-w-xs" %>
      </div>
    </div>
    <div class="form-control mt-6">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input w-full bg-white #{input_error_class(@user, :name)}" %>
    </div>
    <div class="form-control mt-8">
      <%= f.submit "更新", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>